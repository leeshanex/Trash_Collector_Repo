@model TrashCollector_Proj.Models.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DayOfWeekPickUp" class="control-label"></label>
                <select name="DayOfWeekPickUp" id="DayOfWeekPickUp" class="form-control">
                    <option value=""></option>
                    <option value="Monday">Monday</option>
                    <option value="Tuesday">Tuesday</option>
                    <option value="Wednesday">Wednesday</option>
                    <option value="Thursday">Thursday</option>
                    <option value="Friday">Friday</option>
                </select>
                <span asp-validation-for="DayOfWeekPickUp" class="text-danger"></span>
            </div>
            @*One-time pickup*@
            <div>
                <label for="OneTimePickupDay" class="text-dark">Request an extra, One-time pickup:</label>
                <input type="date" id="OneTimePickupDay" name="One-time Pickup"
                       value=" "
                       min="" max="" />
            </div>
            @*Start and end Suspend pickup*@
        <div>
            <div>
                <label for="SuspendPickupDates" class="text-dark">Temporarily Suspend pickups:</label>
                <input type="date" id="SuspendPickupDates" name="Suspend Pickup"
                       value=" "
                       min="" max="" />
            </div>
        </div>
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.AmountOwedBalance)
            @Html.HiddenFor(model => model.IdentityUserId)

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
